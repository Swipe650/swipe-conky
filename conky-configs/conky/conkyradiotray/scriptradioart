#!/bin/bash 
st=$(qdbus net.sourceforge.radiotray /net/sourceforge/radiotray net.sourceforge.radiotray.getCurrentRadio)
so=$(qdbus net.sourceforge.radiotray /net/sourceforge/radiotray getCurrentMetaData| fold -s -w150)
lbc_uk='LBC UK'
lbc_london='LBC London'
plan_rock='Planet Rock'
kfi='KFI'
twit='TWiT.am'
fivelive='5live'
radiofour='Radio 4'
radiofourextra='Radio 4 Extra'
radiostoke='Radio Stoke'
radio_paradise='Radio Paradise' 
soma='Space Station Soma'
ragga='Raggakings'
crl='Classic Rock Lounge'
pingrad='Pinguin Radio'
hr80s='Hard Rockin 80s'
talkradio='TalkRadio'
big80s='Big 80s Metal'

station=${st}
status='Playing'
rp='Radio Paradise'
artist=${so: -7}
cadena=${st: -14} 
if [ "$artist" = "$status" ]; 
then
#title='radiotray icon'
title='black'
elif [ "$cadena" = "$rp" ]; 
then 
station='Radio Paradise'  
else 
title=$so 
fi


echo $title | fold -s -w80 > ~/.conky/conkyradiotray/artist_title.txt

title=$(head -1 ~/.conky/conkyradiotray/artist_title.txt)
linkMiniature=$(wget -U'Googlebot-Image/1.0' -qO - "www.google.co.uk/search?q=$title\&tbm=isch" | perl -pe 's!.*?<img .*?src="([^"]*)".*!$1!')

case "$station" in 
    "$lbc_uk" )
        cp -f ~/.local/share/radiotray/lbc  ~/.local/share/radiotray/icon
;;
    "$lbc_london" )
        cp -f ~/.local/share/radiotray/lbc2  ~/.local/share/radiotray/icon
;;
    "$kfi" )
        cp -f ~/.local/share/radiotray/kfi  ~/.local/share/radiotray/icon
;;
    "$twit" )
        cp -f ~/.local/share/radiotray/twit  ~/.local/share/radiotray/icon
;;
    "$fivelive" )
        cp -f ~/.local/share/radiotray/5live  ~/.local/share/radiotray/icon
;;
    "$radiofour" )
        cp -f ~/.local/share/radiotray/radio4  ~/.local/share/radiotray/icon
;;
    "$radiofourextra" )
        cp -f ~/.local/share/radiotray/radio4extra  ~/.local/share/radiotray/icon
;;
    "$radiostoke" )
        cp -f ~/.local/share/radiotray/radiostoke  ~/.local/share/radiotray/icon
;;
    "$talkradio" )
        cp -f ~/.local/share/radiotray/talkradio  ~/.local/share/radiotray/icon
;;
    "$plan_rock" )
        cp -f ~/.local/share/radiotray/planrock  ~/.local/share/radiotray/icon
;;
    "$ragga" )
        cp -f ~/.local/share/radiotray/ragga  ~/.local/share/radiotray/icon
;;
    "$radio_paradise" )
;;
    *)
        #cp -f ~/.local/share/radiotray/radiotray  ~/.local/share/radiotray/icon
        wget -qO miniatureGoogleImage $linkMiniature
        convert ~/miniatureGoogleImage ~/.local/share/radiotray/icon
;;
esac

exit 0


